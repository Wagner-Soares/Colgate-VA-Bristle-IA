                                <DVC:LineSeries  Title="Pontos" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" Margin="0,0,0,1" Background="#FFF1F2F7" BorderBrush="Black" OpacityMask="#FFF1F2F7" Foreground="Black"/>
