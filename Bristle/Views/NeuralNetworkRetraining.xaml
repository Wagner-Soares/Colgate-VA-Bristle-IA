                </Grid>
            </Grid>
            <!--ValidationImage-->
            <Grid x:Name="validationImageViewer_" Visibility="Collapsed" MouseMove="frameHolder_MouseMove" MouseLeftButtonUp="SetLensPos_1" Background="#FFF3F3F8"  Margin="257,55,10,5">
