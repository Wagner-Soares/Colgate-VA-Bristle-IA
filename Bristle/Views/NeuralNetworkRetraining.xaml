                                <Grid Grid.Row="1">
                                    <TextBlock x:Name="totalValidationImages" Text="0" HorizontalAlignment="Center"  Foreground="#FFFAE8E8" FontSize="12" Margin="0,-2,0,0" VerticalAlignment="Top"  FontWeight="Bold"/>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="3" >
                            <Button x:Name ="advance" Content="{materialDesign:PackIcon arrowforward, Size=25}" ToolTip="Advance" Background="#FFD9534F" BorderBrush="{x:Null}" Height="Auto" Padding="0" Click="advance_Click"/>
