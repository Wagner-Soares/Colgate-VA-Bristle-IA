                                                <materialDesign:PackIcon Kind="CircleDouble"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Ok" x:Name="none" Click="none_Click">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="CircleDouble"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                    <MenuItem Header="Property" x:Name="property_" Click="property_Click">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="MicrosoftXboxControllerMenu"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                        </MenuItem.Icon>
                                        <MenuItem Header="Box Size">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="Resize"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                            </MenuItem.Icon>
                                            <MenuItem Header="85 x 85" x:Name="size1" Click="size1_Click">
