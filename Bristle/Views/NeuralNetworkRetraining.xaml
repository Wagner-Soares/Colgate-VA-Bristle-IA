                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Error 2" x:Name="defect_b" Click="error_2_Click">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="CircleDouble"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Error 3" x:Name="defect_c" Click="error_3_Click">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="CircleDouble"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Undefined" x:Name="undefined" Click="undefined_Click">
