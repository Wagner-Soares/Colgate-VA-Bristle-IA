                        </DVC:Chart>
                    </Grid>
                    <Grid Grid.Row="5" Background="White">
                        <TextBlock Text="Recall Chart" HorizontalAlignment="Center" Foreground="#FF050505" FontSize="17" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="7">
                        <DVC:Chart Canvas.Top="0" Canvas.Left="0" Name="mcChart2"
                                  Background="White" BorderBrush="White" OpacityMask="#FFF1F2F7" Foreground="#FF1B1B1C">
                            <DVC:Chart.Series>
                                <DVC:LineSeries  Title="Pontos" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" Margin="0,0,0,1" Background="#FFF1F2F7" BorderBrush="Black" OpacityMask="#FFF1F2F7" Foreground="Black"/>
                            </DVC:Chart.Series>
                        </DVC:Chart>
                    </Grid>
                </Grid>
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
