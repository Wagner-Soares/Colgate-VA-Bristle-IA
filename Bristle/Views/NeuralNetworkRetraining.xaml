                    </Grid>
                </Grid>
            </Grid>
            <!--Curatorship-->
            <Grid x:Name="preview" Visibility="Collapsed" MouseMove="frameHolder_MouseMove" MouseLeftButtonUp="SetLensPos_1" Background="#FFF3F3F8"  Margin="257,55,10,5">
