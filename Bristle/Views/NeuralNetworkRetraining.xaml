                <Label Content="loading ..." VerticalAlignment="Center" Foreground="Black"  FontSize="25" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Alert-->
        <Grid x:Name="warning" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.Background>
                    <SolidColorBrush Color="#FF1A1A1A" Opacity="0.3"/>
                </Grid.Background>
            </Grid>
