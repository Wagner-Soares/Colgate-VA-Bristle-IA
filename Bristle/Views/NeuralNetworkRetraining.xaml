                                                    <materialDesign:PackIcon Kind="Resize"  Width="25" Height="25" Margin="-10,-7,0,0"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="80 x 80" x:Name="size2" Click="size2_Click">
