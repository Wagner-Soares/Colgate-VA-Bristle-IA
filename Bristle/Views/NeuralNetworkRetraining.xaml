                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock x:Name="numberValidationImages" Text="0" HorizontalAlignment="Right"  Foreground="#FFFAE8E8" FontSize="20" VerticalAlignment="Center" FontWeight="Bold"/>
